@page "/order-list"

<PageTitle>DELIVERIES</PageTitle>

@using BlazorApp1.Data
@using BlazorApp1.Services;
@inject OrderService orderService;


<h1>Rental Orders</h1>

<a href="./add-order">New Rental Order</a>

<table class="table table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th align="center">Order #</th>
            <th align="center">Date</th>
            <th>Customer</th>
            <th align="right">Items</th>
            <th align="right">Total</th>
            <th>Notes</th>
            <th align="center">Delivery</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in orderList)
        {
            <OrderRow order="item" DeleteOrder="DeleteOrder"> </OrderRow>
        }
    </tbody>
</table>



@code {
    public List<Order> orderList;

    public void GetOrders()
    {
        orderList = orderService.GetAll();
    }

    protected override void OnInitialized()
    {
        GetOrders();
        base.OnInitialized();   
    }

    private void DeleteOrder(int xidOrder)
    {
        orderService.Delete(xidOrder);
        orderList.RemoveAll(x => x.idOrder == xidOrder);
    }
}
