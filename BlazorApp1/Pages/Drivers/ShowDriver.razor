<EditForm Model="tDriver">
    <label>
        First Name: <InputText class="form-control" @bind-Value="tDriver.firstName" placeholder="Enter first name"></InputText>
    </label>
    <label>
        Last Name: <InputText class="form-control" @bind-Value="tDriver.lastName" placeholder="Enter last name"></InputText>
    </label><br />
    <label>
        Phone Number: <InputText class="form-control" @bind-Value="tDriver.phoneNumber" placeholder="Enter phone number"></InputText>
    </label>
    <label>
        e-mail: <InputText class="form-control" @bind-Value="tDriver.email" placeholder="Enter e-mail"></InputText>
    </label>
    <label>
        Driver License: <InputText class="form-control" @bind-Value="tDriver.driverLicense" placeholder="Enter driver license"></InputText>
    </label><br />
    <label>
        Address: <InputText class="form-control" @bind-Value="tDriver.address" placeholder="Enter address"></InputText>
    </label>
    <label>
        Zipcode: <InputText class="form-control" @bind-Value="tDriver.zipcode" placeholder="Enter zipcode"></InputText>
    </label><br />
    <label>
        Vehicle VIN: <InputText class="form-control" @bind-Value="tDriver.vehicleVIN" placeholder="Enter vehicle VIN"></InputText>
    </label><br />
</EditForm>

